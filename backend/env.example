# Backend Environment Variables
# Copy this to .env and fill in your values

# Database Connection (required)
# For Cloud SQL: postgresql+psycopg_async://user:password@localhost/dbname?host=/cloudsql/project:region:instance
# For local: postgresql+psycopg_async://user:password@localhost:5432/dbname
DATABASE_URL=postgresql+psycopg_async://erp:password@localhost:5432/erp_demo

# JWT Secret Key (required) - use a strong random string
SECRET_KEY=your-super-secret-key-change-this-in-production

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.run.app

